        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Student card click events
            studentCards.forEach(card => {
                card.addEventListener('click', function() {
                    const studentName = this.getAttribute('data-name');
                    openStudentModal(studentName);
                });
            });

            // Subject card click events
            subjectCards.forEach(card => {
                card.addEventListener('click', function() {
                    const subjectName = this.getAttribute('data-subject');
                    openSubjectModal(subjectName);
                });
            });

            // Close modal events
            closeModalButtons.forEach(button => {
                button.addEventListener('click', function() {
                    studentModal.style.display = 'none';
                    subjectModal.style.display = 'none';
                });
            });

            // Close modal when clicking outside
            window.addEventListener('click', function(event) {
                if (event.target === studentModal) {
                    studentModal.style.display = 'none';
                }
                if (event.target === subjectModal) {
                    subjectModal.style.display = 'none';
                }
            });

            // Back to top button
            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 300) {
                    toTopButton.classList.add('show');
                } else {
                    toTopButton.classList.remove('show');
                }
            });

            toTopButton.addEventListener('click', function() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });

            // Copy button functionality
            copyButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const textToCopy = this.getAttribute('data-text');
                    copyToClipboard(textToCopy);
                    
                    // Visual feedback
                    const originalText = this.textContent;
                    this.textContent = 'Tersalin!';
                    this.style.backgroundColor = 'var(--success)';
                    
                    setTimeout(() => {
                        this.textContent = originalText;
                        this.style.backgroundColor = '';
                    }, 2000);
                });
            });
        });

        // Functions
        function openStudentModal(studentName) {
            const data = studentData[studentName];
            const modalTitle = document.getElementById('modalStudentName');
            const modalContent = document.getElementById('modalStudentContent');
            
            modalTitle.textContent = `Detail Siswa: ${studentName}`;
            modalContent.innerHTML = `
                <p><strong>No. Absen:</strong> ${data.number}</p>
                <p><strong>Jabatan:</strong> ${data.position}</p>
                <p><strong>Tanggal Lahir:</strong> ${data.birthDate}</p>
                <p><strong>Hobi:</strong> ${data.hobby}</p>
                <div style="margin-top: 20px; padding: 10px; background-color: #f0f8ff; border-radius: 5px;">
                    <p><strong>Catatan:</strong> ${studentName} adalah siswa yang aktif dan berprestasi di Kelas VI.</p>
                </div>
            `;
            
            studentModal.style.display = 'flex';
        }

        function openSubjectModal(subjectName) {
            const data = subjectData[subjectName];
            const modalTitle = document.getElementById('modalSubjectName');
            const modalContent = document.getElementById('modalSubjectContent');
            
            modalTitle.textContent = `Detail Mata Pelajaran: ${subjectName}`;
            modalContent.innerHTML = `
                <p><strong>Deskripsi:</strong> ${data.description}</p>
                <p><strong>Pengajar:</strong> ${data.teacher}</p>
                <p><strong>Jadwal:</strong> ${data.schedule}</p>
                <div style="margin-top: 20px; padding: 10px; background-color: #f0f8ff; border-radius: 5px;">
                    <p><strong>Informasi:</strong> Mata pelajaran ini termasuk dalam kurikulum kelas VI sesuai dengan standar pendidikan nasional.</p>
                </div>
            `;
            
            subjectModal.style.display = 'flex';
        }

        function copyToClipboard(text) {
            const textarea = document.createElement('textarea');
            textarea.value = text;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);
        }

        // Add some styling for copy buttons
        const style = document.createElement('style');
        style.textContent = `
            .btn-copy {
                background-color: var(--accent);
                color: white;
                border: none;
                padding: 8px 15px;
                border-radius: 4px;
                cursor: pointer;
                margin-top: 10px;
                transition: background-color 0.3s;
            }
            
            .btn-copy:hover {
                background-color: var(--secondary);
            }
        `;
        document.head.appendChild(style);
    </script>
